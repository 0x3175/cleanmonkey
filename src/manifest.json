{
  "name": "Cleanmonkey",
  "version": "2.0.0",
  "description": "Run custom scripts on any website.",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{a73808b1-96a4-41ae-9dad-7888c4b9235c}"
    }
  }
}